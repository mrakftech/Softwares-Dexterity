<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:syncfusion="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF">

    <Style
        x:Key="CustomMetroWindow"
        TargetType="{x:Type syncfusion:ChromelessWindow}"
        BasedOn="{StaticResource {x:Type syncfusion:ChromelessWindow}}">
        <Setter Property="Height" Value="450" />
        <Setter Property="Width" Value="800" />
    </Style>
    <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#ADD8E6" Offset="0" />
        <GradientStop Color="White" Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DarkToLightBlueGradientBrush" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="DarkBlue" Offset="0" />
        <GradientStop Color="LightBlue" Offset="1" />
    </LinearGradientBrush>
   
    <SolidColorBrush x:Key="ForeColor" Color="#5381ac" />
    
    
</ResourceDictionary>


