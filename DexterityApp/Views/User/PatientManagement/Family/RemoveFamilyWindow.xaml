<Window x:Class="DexterityApp.Views.User.PatientManagement.Family.RemoveFamilyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DexterityApp.Views.User.PatientManagement.Family"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        mc:Ignorable="d"
        Title="Remove Family Member(s)" Height="300" Width="300" Style="{StaticResource DefaultDialogWindow}" WindowStartupLocation="CenterScreen">
    <Grid VerticalAlignment="Center">
        <dxlc:LayoutControl>
            <dxlc:LayoutGroup Orientation="Vertical" Header="Remove The Following Patients" View="GroupBox" Style="{StaticResource SimpleLayoutGroup}">
                <dxlc:LayoutItem>
                    <TextBlock>List of patients</TextBlock>
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup>
                    <dxlc:LayoutItem>
                        <Button Content="Remove"></Button>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem>
                        <Button Content="Cancel"></Button>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</Window>