<Application
    x:Class="DexterityApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="OnStartup"
    Exit="OnExit"
    DispatcherUnhandledException="OnDispatcherUnhandledException">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/_Thickness.xaml" />
                <ResourceDictionary Source="/Styles/MetroWindow.xaml" />
                <ResourceDictionary Source="/Styles/TextBlock.xaml" />
                <ResourceDictionary Source="/Styles/TextBox.xaml" />
                <ResourceDictionary Source="/Styles/Button.xaml" />
                <ResourceDictionary Source="/Styles/CustomTheme.xaml" />
                <ResourceDictionary Source="/Styles/LayoutItem.xaml" />
                <ResourceDictionary Source="/Styles/CustomWindow.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <WindowStartupLocation x:Key="WSL">CenterScreen</WindowStartupLocation>
        </ResourceDictionary>
     
       
    </Application.Resources>
</Application>
